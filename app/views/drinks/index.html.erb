<div class="container">
  <div class="row justify-content-center">
    <div class="col-6">
      <%= form_tag drinks_path, method: :get do %>
        <div class="search-form-control">
          <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Find a drink", 
            type: "text"
          %>
          <%= submit_tag "Search", class: "btn btn-flat" %>
        </div>
      <% end %>

      <h2 class="text-center">Popular</h2>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Cappuccino
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Iced White Chocolate Mocha
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Cookies & Cream Frappuccino
        </div>
      </div>

      <h2 class="text-center">New</h2>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Cappuccino
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Iced White Chocolate Mocha
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Cookies & Cream Frappuccino
        </div>
      </div>
      
      <br>
      <br>
      <br>
      <div class="cards">
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Cappuccino
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Iced White Chocolate Mocha
        </div>

        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(../assets/sorin.jpg)">
          Cookies & Cream Frappuccino
        </div>
      </div>

      <ul>
        <% @drinks.each do |drink| %>
         <ol><%= link_to drink.name, drink_path(drink) %></ol> 
        <% end %>
      </ul>

      
    </div>
  </div>
</div>




